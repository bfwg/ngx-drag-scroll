{
  "compileOnSave": false,
  "angularCompilerOptions": {
    "compilationMode": "partial"
  },
  "compilerOptions": {
    "baseUrl": "./",
    "downlevelIteration": true,
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "module": "esnext",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "ES2022",
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2018", "dom"],
    "paths": {
      "ngx-drag-scroll": ["projects/ngx-drag-scroll/src/public-api.ts"]
    },
    "useDefineForClassFields": false
  }
}
